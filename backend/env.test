# Test Environment Configuration
APP_ENV=test
APP_VERSION=1.0.0-test

# Database
DATABASE_URL=postgres://testuser:testpass@localhost:5433/testdb?sslmode=disable

# Redis
REDIS_URL=redis://localhost:6380

# Server
API_PORT=8081
LOG_LEVEL=debug

# Rate Limiting
PUBLIC_RATE_LIMIT=1000
PUBLIC_RATE_LIMIT_WINDOW=1m
RATE_LIMIT_ENABLED=true

# Provider Configuration (File-based for tests)
PROVIDER1_FILE_PATH=/app/data/providers/provider1.json
PROVIDER2_FILE_PATH=/app/data/providers/provider2.xml
PROVIDERS_FILE_ONLY=true

# Provider URLs (not used in file-only mode)
PROVIDER1_BASE_URL=http://localhost:3001
PROVIDER2_BASE_URL=http://localhost:3002

# Provider Timeouts
PROVIDER_TIMEOUT=5s

# Admin Configuration
ADMIN_API_ENABLED=true
ADMIN_API_KEY=test-admin-key-12345

# Background Jobs (disabled for tests)
CONTENT_SYNC_ENABLED=false
SCORE_RECALC_ENABLED=false
ASYNC_JOBS_ENABLED=false

# Cache Configuration (disabled for tests)
SEARCH_CACHE_ENABLED=false

# Scoring Configuration
VIDEO_TYPE_MULTIPLIER=1.5
TEXT_TYPE_MULTIPLIER=1.0
FRESHNESS_1_WEEK=5.0
FRESHNESS_1_MONTH=3.0
FRESHNESS_3_MONTHS=1.0

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Metrics Configuration
METRICS_CHANGE_THRESHOLD_PERCENT=10
METRICS_CHANGE_THRESHOLD_ABS_VIEWS=100
METRICS_CHANGE_THRESHOLD_ABS_LIKES=10
METRICS_CHANGE_THRESHOLD_ABS_REACTIONS=5

# Job Configuration
CONTENT_SYNC_INTERVAL=1h
CONTENT_SYNC_RETRY_COUNT=3
CONTENT_SYNC_RETRY_DELAY=30s
SCORE_RECALC_INTERVAL=24h
SCORE_BATCH_SIZE=100
